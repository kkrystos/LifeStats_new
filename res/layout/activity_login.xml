<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="85.33dp"
            android:layout_height="24dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Imie"
            android:textColor="@color/szary"
            android:textColorHint="@color/szary_jasny"
            android:textSize="16sp"
            android:typeface="sans" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nazwisko"
            android:textColor="@color/szary"
            android:textColorHint="@color/szary_jasny"
            android:textSize="16sp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/login_manBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ikona_1"
                android:layout_weight="1"
                android:typeface="sans"
                android:textSize="16sp"
                android:text="Man" />

            <Button
                android:id="@+id/login_womanBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ikona_2_szara"
                android:layout_weight="1"
                android:typeface="sans"
                android:textSize="16sp"
                android:text="Woman" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:textColor="@color/szary"
            android:textColorHint="@color/szary_jasny"
            android:textSize="16sp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kraj"
            android:textColor="@color/szary"
            android:textColorHint="@color/szary_jasny"
            android:textSize="16sp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Miasto"
            android:textColor="@color/szary"
            android:textColorHint="@color/szary_jasny"
            android:textSize="16sp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp" >

            <Button
                android:id="@+id/login_continueBtn"
                android:layout_width="233.33dp"
                android:layout_height="33.3dp"
                android:background="@color/niebieski"
                android:text="CONTINUE"
                android:textColor="@color/bialy"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_niebieskie" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_szare" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_szare" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_szare" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>