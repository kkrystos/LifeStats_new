<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ikona_1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ikona_2_szara" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="233.33dp"
            android:layout_height="wrap_content"
            android:ems="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp" >

            <Button
                android:id="@+id/login_continueBtn"
                android:layout_width="233.33dp"
                android:layout_height="33.3dp"
                android:background="@color/niebieski"
                android:text="CONTINUE"
                android:textColor="@color/bialy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_niebieskie" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_szare" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_szare" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_szare" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>