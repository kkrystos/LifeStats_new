<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="85.33dp"
            android:layout_height="24dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30px" >

            <ImageButton
                android:id="@+id/synchBtnF"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:src="@drawable/facebook" />

            <ImageButton
                android:id="@+id/synchBtnT"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:src="@drawable/twitter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/synchBtnG"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:src="@drawable/google_plus" />

            <ImageButton
                android:id="@+id/synchBtnP"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:src="@drawable/pinterest" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30px" >

            <Button
                android:id="@+id/synch_continueBtn"
                android:layout_width="233.33dp"
                android:layout_height="33.3dp"
                android:background="@color/niebieski"
                android:text="CONTINUE"
                android:textColor="@color/bialy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_szare" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_niebieskie" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_szare" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/kolo_szare" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>